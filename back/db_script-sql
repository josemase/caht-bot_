CREATE DATABASE tienda;


CREATE TABLE productos (
    id SERIAL PRIMARY KEY,
    categoria TEXT NOT NULL,
    tipo TEXT NOT NULL,
    marca TEXT NOT NULL,
    modelo TEXT NOT NULL,
    precio DECIMAL(10,2) NOT NULL,
    specs JSONB
);

